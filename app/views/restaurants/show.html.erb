<h2><%= @restaurant.name %></h2>
<p>Address: <%= @restaurant.address  %></p>
<p>Phone Number: <%= @restaurant.phone_number %></p>
<br>
<h6>Reviews</h6>
<h6><%= link_to "Add new review", new_restaurant_review_path(@restaurant) %></h6>
<% @restaurant.reviews.each do |review|  %>
<p><%= review.content  %></p>
<p><%=  review.rating %></p>
<% end %>
<br>
<h6><%= link_to "Back to Restaurant list", restaurants_path %></h6>

